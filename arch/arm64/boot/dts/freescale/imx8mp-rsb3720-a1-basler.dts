/dts-v1/;

#include "imx8mp-rsb3720-a1.dts"

&i2c2 {
	/delete-node/ov5640_mipi@3c;

	basler_camera_vvcam@36 {
		compatible = "basler,basler-camera-vvcam", "basler-camera-vvcam";
		reg = <0x36>;
		csi_id = <0x00>;
		status = "okay";

		port {
			basler_ep_0: endpoint {
				data-lanes = <1 2 3 4>;
				clock-lanes = <0>;
				link-frequencies = /bits/ 64 <248000000>;
				remote-endpoint = <&mipi_csi0_ep>;
			};
		};
	};
};

&i2c3 {
	/delete-node/ov5640_mipi@3c;
};

&mipi_csi_0 {
	/delete-node/port@0;

	port@0 {
		mipi_csi0_ep: endpoint {
			remote-endpoint = <&basler_ep_0>;
			data-lanes = <4>;
			csis-hs-settle = <16>;
		};
	};
};

&mipi_csi_1 {
	status = "disabled";
	/delete-node/port@1;
};

&isi_0 {
	status = "disabled";
};

&isi_1 {
	status = "disabled";
};

&isp_0 {
	status = "okay";
};

&dewarp {
	status = "okay";
};
