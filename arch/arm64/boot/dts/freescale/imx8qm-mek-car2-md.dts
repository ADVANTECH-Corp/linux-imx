#include "imx8qm-mek-car2.dts"

&i2c0_mipi0 {
	status = "okay";
};

&mipi0_dphy {
	status = "okay";
};

&mipi0_dsi_host {
	status = "okay";
};

&adv_bridge0 {
	status = "okay";
