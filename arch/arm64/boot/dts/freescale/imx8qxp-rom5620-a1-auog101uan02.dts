#include "imx8qxp-rom5620-a1.dts"

&ldb1 {
	status = "disabled";
};

&ldb2 {
	status = "disabled";
};

&mipi0_dsi_host {
	status = "okay";

		panel@0 {
                compatible = "auo,g101uan02";
                reg = <0>;
                port {
                        panel1_in: endpoint {
                                remote-endpoint = <&mipi_dsi1_bridge_out>;
                        };
                };
        };
        port@2 {
                mipi_dsi1_bridge_out: endpoint {
                        remote-endpoint = <&panel1_in>;
                };
        };
};

&mipi1_dsi_host {
	status = "okay";

		panel@0 {
                compatible = "auo,g101uan02";
                reg = <0>;
                port {
                        panel2_in: endpoint {
                                remote-endpoint = <&mipi_dsi2_bridge_out>;
                        };
                };
        };
        port@2 {
                mipi_dsi2_bridge_out: endpoint {
                        remote-endpoint = <&panel2_in>;
                };
        };
};

