#include "adv-imx8qxp-rom5620-a1.dts"

/ {
	usdhc2_pwrseq: usdhc2_pwrseq {
		compatible = "mmc-pwrseq-simple";
		reset-gpios =	<&gpio_exp2 0 1>,
						<&gpio_exp2 1 1>,
						<&gpio_exp2 4 1>;
	};
};

&usdhc2 {
	/delete-property/cd-gpios;
	/delete-property/wp-gpios;
	mmc-pwrseq = <&usdhc2_pwrseq>;
};

